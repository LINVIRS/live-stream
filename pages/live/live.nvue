					<view class="flex align-center justify-center py-2 px-2 rounded bg-main" @click="sendGift"><text class="font text-white">发送</text></view>
				</view>
			</view>
		</uni-popup>
	</view>
</template>

<script>
import gift from '../../components/common/gift.vue';
import Danmu from '../../components/common/danmu.vue';
import uniPopup from '../../components/uni-ui/uni-popup/uni-popup.vue';
import MyGifts from '../../common/gift.js';
export default {
	components: { gift, Danmu, uniPopup },
	mounted() {
		//送礼物颜色
		// setInterval(() => {
		// 	this.$refs.gift.send({
		// 		userName: '发送人',
		// 		avatar: '',
		// 		gift_name: '蛋糕',
		// 		gift_image: '/static/gift/3.png',
		// 		num: 1
		// 	});
		// }, 3000);
	},

	data() {
		return {
			statusBarHeight: 0,
			content: '',
			gifts: [],
			giftActiveId: 0
		};
	},
	onLoad() {
		let res = uni.getSystemInfoSync();
		this.statusBarHeight = res.statusBarHeight;
		console.log(this.statusBarHeight);
		this.gifts = MyGifts;
	},
	methods: {
		//打开输入弹幕的对话框
		openInput() {
			this.$refs.input.open();
		},
		//提交发送弹幕信息
		submit() {
			if (this.content === '') {
				return;
			}
			this.$refs.danmu.send({
				id: Math.random() * 100,
				name: 'wanglin',
				content: this.content
			});
			this.content = '';
			this.$refs.input.close();
		},
		//返回上一层页面
		back() {
			uni.navigateBack({
				delta: 1
			});
		},
	
	// 送礼物相关方法
	openGift() {
		
		this.$refs.giftPoup.open();
	},
	closeGift() {
		this.$refs.giftPoup.close();
	},
	sendGift() {
		if (this.giftActiveId === 0) {
			return uni.showToast({
				title: '请选择发送礼物',
				icon: 'none'
			});
		}
		let index = this.gifts.findIndex(item => item.id === this.giftActiveId);
		if (index === -1) {
			return;
		}
		let g = this.gifts[index];
		this.$refs.gift.send({
			userName: '王林',
			avatar: '',
			gift_name: g.name,
			gift_image: g.image,
			num: 10
		});
		this.closeGift();
	},
	openCoin(){
		uni.navigateTo({
			url:'../coin/coin'
		});
	}
	},
};
</script>

